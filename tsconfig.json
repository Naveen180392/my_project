{
  "compilerOptions": {
    "target": "es5",                     /* Specify ECMAScript target version */
    "lib": ["dom", "esnext"],            /* Specify library files to be included */
    "jsx": "react",                      /* Enable JSX support */
    "strict": true,                      /* Enable all strict type-checking options */
    "esModuleInterop": true,             /* Enables emit interoperability between CommonJS and ES Modules */
    "skipLibCheck": true,                /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file */
    "noEmit": false,                     /* Do not emit output files */
    "moduleResolution": "node",          /* Specify module resolution strategy */
    "resolveJsonModule": true            /* Enable importing of JSON modules */
    // Add any other necessary compiler options
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"      /* Reference to tsconfig.app.json */
    },
    {
      "path": "./tsconfig.node.json"     /* Reference to tsconfig.node.json */
    }
    // Add more references if needed
  ]
}
